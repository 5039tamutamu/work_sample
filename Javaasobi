<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clicker Game</title>
    <style>
        body {
            text-align: center;
            padding: 50px;
        }
        #score {
            font-size: 24px;
            margin-bottom: 20px;
        }
        #clickButton {
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }
    </style>
</head>
<body>

    <h1>Clicker Game</h1>
    <p id="score">Score: <span id="scoreValue">0</span></p>
    <button id="clickButton" onclick="increaseScore()">Click me!</button>

    <script>
        // 初期スコア
        let score = 0;

        // スコアを増やす関数
        function increaseScore() {
            // スコアを増やす
            score++;

            // スコアを表示する要素を更新
            document.getElementById("scoreValue").textContent = score;
        }
    </script>

</body>
</html>
